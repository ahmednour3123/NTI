{{>header}}
{{>nav}}
<section class="container my-5">

    
    <h3>All Tasks</h3>
    
    <form class="d-flex my-5 " role="search" method="get" action="/search/?{{search}}">
        <input class="form-control me-2 justify-content-end" type="search" placeholder="Search" name="search">
        <button class="btn btn-outline-success text-light bg-primary" type="submit">Search</button>
    </form>

    <div class="d-flex justify-content-between mb-4 my-5">
            <a href="/addPost" class="btn btn-primary">
                Add Task
            </a>
            <a href="/delAll" class="btn btn-danger">
                Delete All
            </a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#if hasData}}
            {{#each tasks}}
            <tr>
                    <td>{{_id}}</td>
                    <td>{{title}}</td>
                    <td>{{content}}</td>
                    <td>{{date}}</td>
                    <td> {{status}} </td>
                <td>
                    <a href="/single/{{_id}}" class="btn btn-primary mx-3">Show</a>
                    <a href="/edit/{{_id}}" class="btn btn-warning mx-3">Edit</a>
                    <a href="/del/{{_id}}" class="btn btn-danger mx-3">Delete</a>
                    <a href="/activate/{{_id}}" class="btn btn-danger mx-3">Activate</a>
                </td>
            </tr>
            {{/each}}
            {{else}}
            <tr>
                <td colspan="5">No users yet</td>
            </tr>
            {{/if}}
        </tbody>
    </table>
</section>
{{>footer}}